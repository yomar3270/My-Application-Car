<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="9dp"
        android:text="Car Name"
        android:textColor="@color/system_blue"
        android:textSize="@dimen/text_size_large" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignRight="@id/textCarName"
        android:layout_marginRight="-125dp"
        app:srcCompat="@drawable/photoicon" />

    <TextView
        android:id="@+id/textCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAddy"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Car Type" />

    <TextView
        android:id="@+id/textAddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCarName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="MPG" />


    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="-66dp"
        android:layout_toLeftOf="@id/imageView"
        android:text="$Price"
        android:textSize="@dimen/text_size_medium"/>

    <Button
        android:id="@+id/buttonReserveCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textCarName"
        android:layout_alignBottom="@+id/textCarType"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/system_transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Reserve"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible"
        tools:visibility="visible" />
</RelativeLayout>